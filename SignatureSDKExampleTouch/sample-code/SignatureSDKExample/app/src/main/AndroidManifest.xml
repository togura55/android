<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wacom.signaturesdkexample">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.wacom.signaturesdkexample.FormListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wacom.signaturesdkexample.SettingsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="ua.com.vassiliev.androidfilebrowser.FileBrowserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ua.com.vassiliev.androidfilebrowser.FileBrowserActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wacom.signaturesdkexample.FormViewerActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.wacom.signaturesdkexample.TextEditorActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>